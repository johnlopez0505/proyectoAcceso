extends layout

block content
    h1 Editar Profesor
    form(action=`/profesores-edit/${profesor.id}`, method='post')
        label(for='nombre') Nombre:
        input.form-control(type='text', id='nombre', name='nombre', value=
            profesor.nombre, required=true)
        br
        label(for='apellido') Apellido:
        input.form-control(type='text', id='apellido', name='apellido',
            value=profesor.apellido, required=true)
        br
        label(for='email') Email:
        input.form-control(type='text', id='email', name='email',
            value=profesor.email, required=true)
        br
       
        button(type='submit') Guardar Cambios
        br
    a(href='/profesor') Volver a la Lista