extends layout

block content
    div.container
        h1(class="text-center") Editar Profesor
        form(action=`/profesores-edit/${profesor.id}`, method='post')
            div(class="input-group mb-2 " style="width: 500px" class="mx-auto")
                label.bg-success.bg-gradient(for='nombre' class="input-group-text"  style="width: 100px") Nombre:
                input.form-control(type='text', id='nombre', name='nombre', value=
                    profesor.nombre, required=true class="border border-success")
            br
            div(class="input-group mb-2 " style="width: 500px" class="mx-auto")
                label.bg-success.bg-gradient(for='apellido' class="input-group-text"  style="width: 100px") Apellido:
                input.form-control(type='text', id='apellido', name='apellido',
                    value=profesor.apellido, required=true class="border border-success")
            br
            div(class="input-group mb-2 " style="width: 500px" class="mx-auto")
                label.bg-success.bg-gradient(for='email' class="input-group-text"  style="width: 100px") Email:
                input.form-control(type='text', id='email', name='email',
                    value=profesor.email, required=true class="border border-success")
            br
            div(class="d-grid gap-2 col-2 mx-auto")
                button(type='submit' class="btn btn-outline-success") Guardar Cambios
        div(class="d-grid gap-2 col-2 mx-auto")
            a(href='/profesores' class="btn btn-outline-success") Volver a la Lista