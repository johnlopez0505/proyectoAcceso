extends layout

block content
    h1 Agregar Profesor
    form(action='/profesores-add', method='post')
        label(for='nombre') Nombre:
        input(type='text', id='nombre', name='nombre', required=true)
        br
        label(for='apellido') Apellido:
        input(type='text', id='apellido', name='apellido', required=true)
        br
        label(for='email') Email:
        input(type='text', id='email', name='email', required=true)
        br
        
        button(type='submit') Agregar Profesor
    br
    a(href='/profesores') Volver a la Lista
